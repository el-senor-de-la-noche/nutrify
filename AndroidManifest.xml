<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- ========================================= -->
    <!--   PERMISOS REQUERIDOS POR LA APLICACIÓN   -->
    <!-- ========================================= -->

    <!-- Cámara para tomar fotos -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Permiso para leer imágenes desde la galería (Android 13–) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Android 13+ utiliza este permiso nuevo -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Guardar imágenes analizadas (si ofreces guardar capturas) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Uso de internet: Gemini, ML APIs, cargas remotas -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permite verificar estado de red -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Vibración para feedback al usuario -->
    <uses-permission android:name="android.permission.VIBRATE" />


    <!-- Requerimientos de cámara -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />


    <!-- ========================================= -->
    <!--               APLICACIÓN                  -->
    <!-- ========================================= -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Nutrify"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nutrify">

        <!-- Actividad principal Jetpack Compose -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Nutrify">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
